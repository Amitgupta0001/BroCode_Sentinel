# BroCode Sentinel - Desktop App Configuration
{
    "name": "brocode-sentinel-desktop",
    "version": "1.0.0",
    "description": "Enterprise-grade continuous authentication desktop client",
    "main": "desktop_app_core.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "dev": "electron . --inspect=5858"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "chart.js": "^4.4.0",
        "socket.io-client": "^4.7.2"
    },
    "devDependencies": {
        "electron": "^27.0.0",
        "electron-builder": "^24.6.4"
    },
    "build": {
        "appId": "com.brocode.sentinel",
        "productName": "BroCode Sentinel",
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "category": "public.app-category.security",
            "target": "dmg"
        }
    }
}